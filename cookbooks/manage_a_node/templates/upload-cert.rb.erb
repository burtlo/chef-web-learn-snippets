require 'winrm'
require 'winrm-fs'

opts = {
  endpoint: 'http://<%= @ip_address %>:5985/wsman',
  user: '<%= @username %>',
  password: '<%= @password %>'
}
connection = WinRM::Connection.new(opts)
file_manager = WinRM::FS::FileManager.new(connection)
file_manager.upload('/tmp/<%= @cert_file %>', 'C:/chef/trusted_certs/<%= @cert_file %>')
